###########################################
# OPENAI TTS SETTINGS (if TTS_PROVIDER=openai)
###########################################
TTS_MODEL=tts-1
TTS_VOICE=alloy
TTS_VOICE_ALT=echo

# Local Piper TTS (if TTS_PROVIDER=local)
PIPER_COMMAND=piper        # path or command name
PIPER_MODEL_A=/home/franke/StudyCast/tts_models/en_US-hfc_female-medium.onnx
PIPER_MODEL_B=/home/franke/StudyCast/tts_models/en_US-hfc_male-medium.onnx